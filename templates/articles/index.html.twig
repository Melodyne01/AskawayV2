{% extends 'base.html.twig' %}

{% block head %}
<title>Askaway | Nos articles</title>
<meta name="robots" content="index">
{% endblock %}

{% block body %}
<div class="uk-padding">
    {% for article in articles %}
        <div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-2@s uk-margin" uk-grid>
            {% if loop.index is odd %}
                <div class="uk-card-media-left uk-cover-container">
                    <img src="{{ asset('/upload/'~ article.image)}}" alt="{{article.title}}" loading="lazy" uk-cover>
                    <canvas width="600" height="400"></canvas>
                </div>
                <div>
                    <div class="uk-card-body">
                        <h3 class="uk-card-title">{{ article.title }}</h3>
                        <p>{{article.introduction}}</p>
                        <p><a href="{{path('app_article', {id: article.id, slug: article.title|slugify})}}">Lire l'article</a></p>

                    </div>
                </div>
            {% else %}
                <div class="uk-flex-last@s uk-card-media-right uk-cover-container">
                    <img src="{{ asset('/upload/'~ article.image)}}" alt="{{article.title}}" loading="lazy" uk-cover>
                    <canvas width="600" height="400"></canvas>
                </div>
                <div>
                    <div class="uk-card-body">
                        <h3 class="uk-card-title">{{ article.title }}</h3>
                        <p>{{article.introduction}}</p>
                        <p><a href="{{path('app_article', {id: article.id, slug: article.title|slugify})}}">Lire l'article</a></p>
                    </div>
                </div>
            {% endif %}
        </div>
    {% else %}
        <div>Il n'y a pas d'article en DB</div>        
    {% endfor %}
</div>
{% endblock %}
